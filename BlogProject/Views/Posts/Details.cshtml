@model BlogProject.Models.Post
@{
    ViewBag.Title = "Details";
}

<!-- Page Header -->
<header class="masthead" style="background-image: url('/Images/Theme/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">--</h2>
                    <span class="meta">
                        Posted by
                        @Html.ActionLink(Model.Author.Name, "Author", "Accounts", new { AuthorID = Model.Author.ID }, null)
                        on @Model.PublishedTime.ToString("D")
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <p>
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
</article>